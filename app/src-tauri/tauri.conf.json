{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Second Brain",
  "version": "0.1.0",
  "identifier": "com.secondbrain.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Second Brain",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "libs/*": "./"
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [
        "libs/libonnxruntime.1.17.1.dylib",
        "libs/libsherpa-onnx-c-api.dylib"
      ],
      "minimumSystemVersion": "12.3"
    }
  }
}
